{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "strictNullChecks": false,
    "noUnusedLocals": true,
    "pretty": true,
    "skipLibCheck": true,
  },
  "include": ["src/**/*"],
  "exclude": ["src/tests"],
}